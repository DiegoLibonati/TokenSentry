{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:extension",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "watch:extension",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "group": "build",
      "presentation": {
        "reveal": "never",
        "clear": true
      },
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": [
          {
            "regexp": "^\\s*(\\S.*):(\\d+):(\\d+):\\s*(warning|error):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started$",
          "endsPattern": "^\\[watch\\] build finished"
        }
      }
    }
  ]
}
